<?php

error_reporting(E_ALL | E_STRICT);

$start = microtime(true);

// CLI options
$opts = getopt('bd::');

if(isset($opts['d'])){
  if(is_string($opts['d']))
    $driver = strtolower(str_replace('=', '', $opts['d']));
  else $driver = 'mysql';
} else $driver = 'mysql';


// Testing interface
include_once dirname(__FILE__) . '/connect.php';

$tests = glob(dirname(__FILE__).'/*.phpt');

echo 'Driver: ', driver(), "\n";

foreach($tests as $test){

  ob_start();
  include $test;
  $file = basename($test);

  if(!preg_match("~^--TEST--\n(.*)\n--FILE--\n(.*)--EXPECT--\n(.*)~s", ob_get_clean(), $matches))
    echo "Invalid $file\n";

  elseif($matches[2] !== $matches[3])
    echo "$file failed - $matches[1]\n";

  // Debug mode (-b option)
  if(isset($opts['b'])){
    echo "$file\nEXPECT:\n$matches[3]\n-\nRESULT:\n$matches[2]\n-\n\n";
  }
}

echo "\n";
printf("%.3F sec, %d KB\n", microtime(true) - $start, memory_get_peak_usage() / 1024);

?>