<?php

error_reporting(E_ALL | E_STRICT);

$start = microtime(true);

$opts = getopt('bd::');

if(isset($opts['d'])){
  if(is_string($opts['d']))
    $driver = strtolower(str_replace('=', '', $opts['d']));
  else $driver = 'mysql';
} else $driver = 'mysql';

if(isset($opts['b']))
  define('DEBUG', true);
else define('DEBUG', false);


include_once dirname(__FILE__) . '/connect.php';

$tests = glob(dirname(__FILE__).'/*.phpt');

echo 'Using driver ', driver(), "...\n";

foreach($tests as $test){

  ob_start();
  include $test;
  $file = basename($test);

  $result = ob_get_clean();
  if(!preg_match("~^--TEST\n(.*)\n--CODE\n(.*)--RESULT\n(.*)~s", $result, $matches))
    echo "Invalid $file\n";

  elseif($matches[2] !== $matches[3])
    echo "$file failed - $matches[1]\n";

  if(DEBUG)
    echo $matches[2], "\n------\n", $matches[3], "\n------\n";
}

echo "\n";
printf("%.3F sec, %d KB\n", microtime(true) - $start, memory_get_peak_usage() / 1024);

?>